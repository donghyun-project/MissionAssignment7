@{
    Layout = null;
}

@model LoginModel

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Mission Assignment 11</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">


</head>

<body>
    <div class="bg-dark text-white p-2">
        <span class="navbar-brand m-l-2">Login to Bookstore Project Admin Page</span>
    </div>

    <!--additional bootstrap mission assignment 11-->
    <div class="container">
        <div class="jumbotron">
            <h1>Login</h1>
            <p>If you want to login and view administration page, type correct user name and password.</p>
        </div>
        <p>Don't forget to put User name.</p>
        <p>Don't forget to put Password.</p>
        <p>Added Additional Bootstrap.</p>
    </div>

    <div class="m-1 p-1">
        <div class="text-danger" asp-validation-summary="All"></div>

        <form method="post" asp-controller="Account" asp-action="Login" style="width: 50vw">
            <div class="form-group">
                <label asp-for="Username">User Name:</label>
                <input asp-for="Username" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Password">Password:</label>
                <input asp-for="Password" type="password" class="form-control" />
            </div>

            <button class="btn btn-primary" type="submit">Log In</button>

            <input type="hidden" asp-for="ReturnUrl" />
        </form>
    </div>

    <!--additional bootstrap mission assignment 11-->
    <footer id="sticky-footer" class="flex-shrink-0 py-4 bg-dark text-white-50">
        <div class="container text-center">
            <small>Copyright &copy; Bookstore Admin</small>
        </div>
    </footer>
</body>
</html>
